# ============================================
# Supabase Configuration (Required)
# ============================================
# Frontend-only application using direct Supabase access
# Get these values from your Supabase project settings:
# https://app.supabase.com/project/_/settings/api

VITE_SUPABASE_URL=https://xxxxx.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# ============================================
# Optional: CDN Configuration
# ============================================
# For image optimization and static asset delivery
VITE_IMAGE_CDN_URL=
VITE_CDN_URL=

# ============================================
# Optional: Analytics Configuration
# ============================================
# Google Analytics or custom analytics endpoint
VITE_GA_MEASUREMENT_ID=
VITE_ANALYTICS_API=

# ============================================
# Optional: Security Configuration
# ============================================
# Cloudflare Turnstile for bot protection
VITE_TURNSTILE_SITE_KEY=your-turnstile-site-key

# ============================================
# Optional: Role Polling Configuration
# ============================================
# Configure how the app detects role changes for logged-in users

# Polling interval in milliseconds (default: 5000 = 5 seconds)
# Minimum value: 1000 (1 second)
VITE_ROLE_POLLING_INTERVAL=5000

# Enable/disable role polling (default: true)
# Set to 'false' to disable automatic role change detection
VITE_ROLE_POLLING_ENABLED=true

# Use Supabase Realtime instead of polling (default: false)
# Set to 'true' to use instant updates via WebSocket
# Note: Requires Realtime to be enabled in Supabase project
VITE_USE_REALTIME_ROLE_UPDATES=false
